<h1 class="title">
  {{t 'championBet.title'}}
</h1>

<article class="message is-info">
  <div class="message-body">
    {{t 'championBet.hintAtLaterChange'}}
  </div>
</article>

<div class="columns is-desktop">
  <div class="column is-half">
    <form>
      <div class="field has-addons is-horizontal">
        <div class="control has-icons-left">
          <div class="select">
            <select onchange={{action "selectTeam" value="target.value"}}>
              {{#if model.championBet.team.id}}
                <option value={{model.championBet.team.id}} selected>
                  {{t (concat 'team.name.' model.championBet.team.id)}}
                </option>
              {{else}}
                <option value="" disabled selected>
                  {{t 'championBet.selectTeam'}}
                </option>
              {{/if}}
              {{#each model.teams as |team|}}
                <option value={{team.id}}>
                  {{t (concat 'team.name.' team.id)}}
                </option>
              {{/each}}
            </select>
          </div>
          <span class="icon is-left">
            {{fa-icon "trophy"}}
          </span>
        </div>
        <div class="control">
          <button type="submit" class="button is-static">
            {{#country-flag teamId=model.championBet.team.id class="icon"}}{{/country-flag}}
          </button>
        </div>
        <div class="control">
          {{#submit-button model=model.championBet submit=(action 'submit')}}
            {{t 'championBet.submit'}}
          {{/submit-button}}
        </div>
      </div>
    </form>
  </div>
</div>
