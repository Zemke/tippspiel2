<h1 class="title">
  {{t 'me.bettingGame.title'}}
</h1>
<p class="subtitle">
  {{t 'me.bettingGame.subtitle'}}
</p>

<div class="columns is-desktop">
  <div class="column">
    <p>
      <button class="is-static button is-danger is-outlined">
        {{model.currentCompetition.caption}}
      </button>
    </p>
  </div>
</div>
<div class="columns is-desktop">
  <div class="column is-half">
    <form>
      <div class="field">
        <div class="control has-icons-left">
          {{input type="text"
                  placeholder=(t 'me.bettingGame.new.name.placeholder')
                  class=(concat 'input ' (if (v-get model 'bettingGame' 'name' 'isInvalid') 'is-danger'))
                  value=(mut (get model.bettingGame 'name'))}}
          <span class="icon is-left">
            {{fa-icon "align-left"}}
          </span>
        </div>
      </div>
      <div class="field">
        <div class="control">
          {{#submit-button model=model.bettingGame submit=(action 'submit')}}
            {{t 'me.bettingGame.new.submit'}}
          {{/submit-button}}
        </div>
      </div>
    </form>
  </div>
</div>
