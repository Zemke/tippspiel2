<div class="columns is-desktop">
  <div class="column is-half">
    <h1 class="title">{{t 'app.signUp'}}</h1>
    <form>
      <div class="field field-body">
        <div class="field">
          <div class="control has-icons-left">
            {{input type="text" placeholder=(t 'signUp.firstName')
                    class=(concat 'input ' (if (v-get model 'firstName' 'isInvalid') 'is-danger'))
                    value=(mut (get model 'firstName'))}}
            <span class="icon is-left">
              {{fa-icon "user-o"}}
            </span>
          </div>
        </div>
        <div class="field">
          <div class="control has-icons-left is-expanded">
            {{input type="text" placeholder=(t 'signUp.lastName')
                    class=(concat 'input ' (if (v-get model 'lastName' 'isInvalid') 'is-danger'))
                    value=(mut (get model 'lastName'))}}
            <span class="icon is-left">
              {{fa-icon "user"}}
            </span>
          </div>
        </div>
      </div>
      <div class="field">
        <div class="control has-icons-left">
          {{input type="email" placeholder=(t 'signUp.email')
                  class=(concat 'input ' (if (v-get model 'email' 'isInvalid') 'is-danger'))
                  value=(mut (get model 'email'))}}
          <span class="icon is-left">
              {{fa-icon "envelope"}}
            </span>
        </div>
      </div>
      <div class="field">
        <div class="control has-icons-left">
          {{input type="password" placeholder=(t 'signUp.password')
                  class=(concat 'input ' (if (v-get model 'password' 'isInvalid') 'is-danger'))
                  value=(mut (get model 'password'))}}
          <span class="icon is-left">
              {{fa-icon "unlock"}}
            </span>
        </div>
      </div>
      <div class="field">
        <div class="control has-icons-left">
          {{input type="password" placeholder=(t 'signUp.passwordConfirmation')
                  class=(concat 'input ' (if (v-get model 'passwordConfirmation' 'isInvalid') 'is-danger'))
                  value=(mut (get model 'passwordConfirmation'))}}
          <span class="icon is-left">
              {{fa-icon "lock"}}
            </span>
        </div>
      </div>
      <div class="field">
        <div class="control">
          {{#submit-button model=model submit=(action 'submit')}}
            {{t 'app.signUp'}}
          {{/submit-button}}
        </div>
      </div>
    </form>
  </div>
</div>
